@model AuthorisationServer.Data.Client

@{
    ViewBag.Title = $"Delete {Model.Name} app";
}

<h3>Are you sure you want to delete this app?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Secret)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Secret)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RedirectUrl)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RedirectUrl)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            @Html.ActionLink("Cancel and go back", "Index", null, new {@class = "btn btn-default"})
        </div>
    }
